<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@color/white"
    android:elevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:padding="8dp">

        <!-- Imagen de la serie -->
        <ImageView
            android:id="@+id/image_anime"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:contentDescription="imagen anime" />

        <!-- Contenedor para el título y el número de episodios -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Título de la serie -->
            <TextView
                android:id="@+id/title_anime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título de la Serie"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Número de episodios -->
            <TextView
                android:id="@+id/episodes_count_anime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número de episodios: 10"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>